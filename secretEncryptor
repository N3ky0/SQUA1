<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="textApp.aspx.cs" Inherits="SQUA1.textApp" %>

<!DOCTYPE html>

<style>
    #secretText {
        margin-left: 650px;
        margin-top: -200px;
    }

    #greenText, #boldText, #italicizeText, #reverseText, 
    #binaryText, #hexadecimalText{
        font-size: larger;
    }

    h1{
        font-size: xx-large;
    }
    button{
        font-size:larger;
    }

</style>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Top secret word Encryptor!</title>
</head>

<body style="background-color: rgb(255, 255, 255)">

    <h1>Top secret word encryptor!</h1>
     <button onclick="DarkMode()">Dark Mode</button>

    <form id="form1" runat="server">

        <h3>Text on a green background</h3>
        <input type="text" id="greenText" />
        <button type="button" onclick="GreenBackground()">Green</button>

        <h3>Bold the text</h3>
        <input type="text" id="boldText" />
        <button type="button" onclick="Bold()">Bold</button>

        <h3>Italicize the text</h3>
        <input type="text" id="italicizeText" />
        <button type="button" onclick="Italicized()">Italicize</button>

        <h3>Reverse the text</h3>
        <input type="text" id="reverseText" />
        <button type="button" onclick="Reverse()">Reverse</button>

        <h3>Decimal to binary</h3>
        <input type="text" id="binaryText" />
        <button type="button" onclick="Binary()">Binary</button>

        <h3>Decimal to hexadecimal</h3>
        <input type="text" id="hexadecimalText" />
        <button type="button" onclick="Hexadecimal()">Hexadecimal</button>

        <h1 id="secretText"></h1>

        <script>
            var dark;
            function GreenBackground() {
                if (document.getElementById("greenText").value == "") {
                    alert("No text has been entered!");
                } else {
                    document.getElementById("secretText").innerHTML = document.getElementById("greenText").value;
                    document.body.style.backgroundColor = "green";
                    document.getElementById("secretText").style.fontWeight = "normal";
                    document.getElementById("secretText").style.fontStyle = "normal";
                    document.getElementById("secretText").style.transform = "none";
                    if (dark == true) {
                        document.body.style.color = "white";
                    } else {
                        document.body.style.color = "black";
                    }

                }
            }
            function Bold() {
                if (document.getElementById("boldText").value == "") {
                    alert("No text has been entered!");
                } else {
                    document.getElementById("secretText").innerHTML = document.getElementById("boldText").value;
                    document.getElementById("secretText").style.fontWeight = "bold";
                    document.getElementById("secretText").style.fontStyle = "normal";
                    document.getElementById("secretText").style.transform = "none";
                    if (dark == true) {
                        document.body.style.backgroundColor = "#333";
                        document.body.style.color = "white";
                    } else {
                        document.body.style.backgroundColor = "rgb(255, 255, 255)";
                        document.body.style.color = "black";
                    }

                }
            }
            function Italicized() {
                if (document.getElementById("italicizeText").value == "") {
                    alert("No text has been entered!");
                } else {
                    document.getElementById("secretText").innerHTML = document.getElementById("italicizeText").value;
                    document.getElementById("secretText").style.fontStyle = "italic";
                    document.getElementById("secretText").style.fontWeight = "normal";
                    document.getElementById("secretText").style.transform = "none";
                    if (dark == true) {
                        document.body.style.backgroundColor = "#333";
                        document.body.style.color = "white";
                    } else {
                        document.body.style.backgroundColor = "rgb(255, 255, 255)";
                        document.body.style.color = "black";
                    }

                }
            }
            function Reverse() {
                if (document.getElementById("reverseText").value == "") {
                    alert("No text has been entered!");
                } else {
                    document.getElementById("secretText").innerHTML = document.getElementById("reverseText").value;
                    document.getElementById("secretText").style.transform = "rotateY(180deg)";
                    document.getElementById("secretText").style.fontWeight = "normal";
                    document.getElementById("secretText").style.fontStyle = "normal";

                    if (dark == true) {
                        document.body.style.backgroundColor = "#333";
                        document.body.style.color = "white";
                    } else {
                        document.body.style.backgroundColor = "rgb(255, 255, 255)";
                        document.body.style.color = "black";
                    }
                }
            }
            function Binary() {
                if (document.getElementById("binaryText").value == "") {
                    alert("No text has been entered!");
                } else if (isNaN(document.getElementById("binaryText").value)) {
                    alert("This is not a number!");
                } else {
                    document.getElementById("secretText").innerHTML = dec2bin(document.getElementById("binaryText").value);
                    function dec2bin(dec) {
                        return (dec >>> 0).toString(2);
                    }
                    document.getElementById("secretText").style.fontStyle = "none";
                    document.getElementById("secretText").style.fontWeight = "normal";
                    document.getElementById("secretText").style.transform = "none";
                    if (dark == true) {
                        document.body.style.backgroundColor = "#333";
                        document.body.style.color = "white";
                    } else {
                        document.body.style.backgroundColor = "rgb(255, 255, 255)";
                        document.body.style.color = "black";
                    }
                }
            }

            function Hexadecimal() {
                if (document.getElementById("hexadecimalText").value == "") {
                    alert("No text has been entered!");
                } else if (isNaN(document.getElementById("hexadecimalText").value)) {
                    alert("This is not a number!");
                } else {
                    document.getElementById("secretText").innerHTML = dec2Hex(document.getElementById("hexadecimalText").value);

                    function dec2Hex(d, padding) {
                        var hex = Number(d).toString(16);
                        padding = typeof (padding) === "undefined" || padding === null ? padding = 2 : padding;

                        while (hex.length < padding) {
                            hex = "0" + hex;
                        }

                        return hex;
                    }
                    document.getElementById("secretText").style.fontStyle = "none";
                    document.getElementById("secretText").style.fontWeight = "normal";
                    document.getElementById("secretText").style.transform = "none";
                    if (dark == true) {
                        document.body.style.backgroundColor = "#333";
                        document.body.style.color = "white";
                    } else {
                        document.body.style.backgroundColor = "rgb(255, 255, 255)";
                        document.body.style.color = "black";
                    }
                }
            }
            function DarkMode() {
                if (document.body.style.backgroundColor == "rgb(255, 255, 255)") {
                    document.body.style.backgroundColor = "#333";
                    document.body.style.color = "white";
                    dark = true;
                }
                else {
                    document.body.style.backgroundColor = "rgb(255, 255, 255)";
                    document.body.style.color = "black";
                    dark = false;
                }
            }
        </script>
    </form>
</body>
</html>
